<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0E0E"
    tools:context=".paginainicial">

    <HorizontalScrollView
        android:layout_width="436dp"
        android:layout_height="195dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/teenwolf"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@drawable/teenwolf"
                android:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/brooklyn"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@drawable/brooklyn"
                android:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/gossip"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@drawable/gossip_girl"
                android:src="@tools:sample/avatars" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="436dp"
        android:layout_height="192dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.574">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/oppen"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@drawable/oppenheimer"
                android:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/napoleao"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@drawable/napoleao"
                android:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/pobres"
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@drawable/pobres"
                android:src="@tools:sample/avatars" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="432dp"
        android:layout_height="199dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/aquaman"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@drawable/aquaman"
                android:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@drawable/avatar__1_"
                android:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/barbie"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@drawable/barbie"
                android:src="@tools:sample/avatars" />
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>